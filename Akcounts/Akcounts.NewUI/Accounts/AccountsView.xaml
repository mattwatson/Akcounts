<UserControl x:Class="Akcounts.NewUI.Accounts.AccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderBrush="#FF590980"
	        BorderThickness="2">
        <DockPanel>
            <Border BorderBrush="#FF590980"
			        BorderThickness="0 0 0 1"
			        Padding="4"
			        DockPanel.Dock="Top">
                <TextBlock Text="{Binding DisplayName}"
				           Foreground="White"
				           FontWeight="Bold"
				           FontSize="20" />
            </Border>

            <TextBlock Foreground="White"
			           Margin="12"
			           FontSize="20"
			           Text="Accounts go here..." />
        </DockPanel>
    </Border>
</UserControl>